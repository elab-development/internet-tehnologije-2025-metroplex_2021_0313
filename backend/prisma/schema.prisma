generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         String   @default("USER") // USER | ADMIN
  createdAt    DateTime @default(now())

  trips        Trip[]
}

model Trip {
  id          Int      @id @default(autoincrement())
  userId      Int
  destination String
  daysCount   Int
  budget      Float?
  interests   String
  createdAt   DateTime @default(now())

  regenLockUntil DateTime? // prevents double-click regen; auto-expires
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  dayPlans    DayPlan[]

  @@index([userId])
}

model DayPlan {
  id        Int   @id @default(autoincrement())
  tripId    Int
  dayNumber Int

  trip      Trip  @relation(fields: [tripId], references: [id], onDelete: Cascade)
  plannedActivities PlannedActivity[]

  @@unique([tripId, dayNumber])
  @@index([tripId])
}

model Activity {
  id            Int     @id @default(autoincrement())
  destination   String
  name          String
  type          String
  durationHours Float
  priceLevel    Int
  latitude      Float?
  longitude     Float?

  plannedActivities PlannedActivity[]

  @@unique([destination, name], name: "destination_name")
  @@index([destination])
}

model PlannedActivity {
  id         Int @id @default(autoincrement())
  dayPlanId  Int
  activityId Int
  orderIndex Int

  dayPlan    DayPlan   @relation(fields: [dayPlanId], references: [id], onDelete: Cascade)
  activity   Activity  @relation(fields: [activityId], references: [id])

  @@unique([dayPlanId, orderIndex])
  @@index([activityId])
}

model RevokedToken {
  id        Int      @id @default(autoincrement())
  tokenHash String   @unique
  expiresAt DateTime
  revokedAt DateTime @default(now())

  @@index([expiresAt])
}
